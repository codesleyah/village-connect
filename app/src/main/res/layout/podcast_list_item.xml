<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pdcast_vcard"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:backgroundTint="#3A4D60"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/pd_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pdico" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pd_icon"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand_light"
            android:maxLines="2"
            android:text="Talking farming with Elvin"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold"
            android:id="@+id/podcast_topic"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>