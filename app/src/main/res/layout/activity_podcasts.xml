<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PodcastsActivity">

    <RelativeLayout
        android:id="@+id/podcast_top_section"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/topsection">

        <EditText
            android:id="@+id/podcast_search_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/searchbar_bg"
            android:fontFamily="@font/quicksand_light"
            android:hint="Search"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/podcast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/podcast_search_bar"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand_light"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/songProgressBar"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_below="@id/podcast_title"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tx_pd_duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/podcast_title"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/songProgressBar"
            android:text="00:00"
            android:textColor="#ffffff" />


        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/songProgressBar"
            android:layout_marginLeft="145dp"
            android:backgroundTint="#3A4D60"
           />

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/songProgressBar"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#3A4D60"
            />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/songProgressBar"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#3A4D60" />

        <TextView
            android:id="@+id/down_load_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/songProgressBar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/btn_next"
            android:drawableStart="@drawable/download" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/podcast_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/podcast_top_section"
        android:padding="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_pd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>